import pygame
import sys

# Initialize Pygame
pygame.init()

# Set up the display
screen = pygame.display.set_mode((800, 600))  # Set the screen dimensions (width, height)
pygame.display.set_caption("Image Display")

# Load the image (provide the correct path to your image file)
image = pygame.image.load('path_to_your_image.png')  # Replace with your image path
image_rect = image.get_rect()  # Get the rectangle of the image for positioning

# Main game loop
running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:  # Close the window if the user clicks the close button
            running = False

    # Fill the screen with a color (optional)
    screen.fill((255, 255, 255))  # RGB white background

    # Draw the image on the screen
    screen.blit(image, image_rect)  # You can change the position by modifying image_rect

    # Update the display
    pygame.display.update()

# Quit Pygame
pygame.quit()
sys.exit()